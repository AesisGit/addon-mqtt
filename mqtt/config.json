{
  "name": "MQTT Broker & Web client",
  "version": "dev",
  "slug": "mqtt",
  "description": "Mosquitto MQTT Broker bundled with Hivemq's web client",
  "url": "https://github.com/hassio-addons/addon-mqtt/tree/master/README.md",
  "webui": "https://[HOST]:[PORT:5713]",
  "startup": "services",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "i386"
  ],
  "boot": "auto",
  "hassio_api": true,
  "homeassistant_api": false,
  "host_network": false,
  "ports": {
    "5713/tcp": 5713,
    "1884/tcp": 1884,
    "1883/tcp": 1883
  },
  "map": [
    "ssl",
    "config"
  ],
  "options": {
    "log_level": "info",
    "certfile": "fullchain.pem",
    "keyfile": "privkey.pem",
    "web": {
      "enabled": true,
      "username": "",
      "password": "",
      "ssl": true
    },
    "broker": {
      "enabled": true,
      "enable_ws": true,
      "enable_mqtt": true,
      "ssl": true,
      "allow_anonymous": false
    },
    "mqttusers": [
      { 
        "username": "",
        "password": ""
      }
    ]
  },
  "schema": {
    "log_level": "match(^(trace|debug|info|notice|warning|error|fatal)$)",
    "certfile": "str",
    "keyfile": "str",
    "web": {
      "enabled": "bool",
      "username": "str",
      "password": "str",
      "ssl": "bool"
    },
    "broker": {
      "enabled": "bool",
      "enable_ws": "bool",
      "enable_mqtt": "bool",
      "ssl": "bool",
      "allow_anonymous": "bool"
    },
    "mqttusers": [
      { 
        "username": "str",
        "password": "str"
      }
    ],
    "i_like_to_be_pwned": "bool?",
    "leave_front_door_open": "bool?"
  },
  "environment": {
    "LOG_FORMAT": "{LEVEL}: {MESSAGE}"
  }
}
